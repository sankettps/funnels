<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#hfUpsellModal">Open Modal</button>
<div id="hfUpsellModal" class="modal fade hf-upsell" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= @funnel.name %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="row">
      		<div class="col-xs-6">
      			<img src="<%= @product.image.src %>" class="hf-pro-img">
      		</div>
      		<div class="col-xs-6">
      			<div class="row">
      				<div class="col-xs-12">
      					<h4><%= @product.title %></h4>
      				</div>
      			</div>
      			<div class="row">
      				<div class="col-xs-12">
      					<p class="pro-price">$<%= @product.variants.first.price %></p>
      				</div>
      			</div>
      			<div class="row">
      				<div class="col-xs-12">
	      				<div class="hf-pro-desc">
	      					<%= @product.body_html.html_safe %>
	      				</div>
      				</div>
      			</div>
      		</div>
      	</div>
        <div>
        	
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success">Buy Now</button>
        <button type="button" class="btn btn-default">Checkout</button>
      </div>
    </div>

  </div>
</div>
<style type="text/css">
	.hf-upsell .hf-pro-img{
		width: 100%;
	}
	.hf-pro-desc{
	  /*white-space: nowrap;*/
	  overflow: hidden;
	  text-overflow: ellipsis;
	  max-width: 100%;
	  max-height: 180px;
	}
	.hf-upsell .pro-price{
		float: left;
    font-size: 30px;
    color: #4aae4e;
    margin-right: 15px;
	}
</style>